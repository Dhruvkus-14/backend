<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feed</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-br from-zinc-900 to-zinc-800 text-white min-h-screen flex justify-center px-4">
    <div class="w-full max-w-2xl mt-10">

        <div class="flex justify-between items-center">
            <h3 class="text-3xl font-semibold">üåç Global Feed</h3>
            <a class="bg-blue-500 hover:bg-blue-600 transition px-4 py-2 rounded-lg text-sm font-medium shadow-md" href="/profile">My Posts</a>
        </div>
        <h5 class="text-gray-400 mt-1">See what others are sharing.</h5>

        <!-- All Users' Posts -->
        <div class="posts mt-10">
            <h3 class="text-zinc-400 text-lg font-semibold">Recent Posts</h3>
            <div class="postcontainer mt-4 space-y-4">

                <% posts.reverse().forEach(function(post){ %>
                    <div class="post bg-zinc-800 p-5 rounded-lg shadow-md border border-zinc-700 backdrop-blur-lg transition transform hover:scale-[1.02] hover:border-blue-500 duration-300">
                        <div class="flex justify-between items-center">
                            <% if (post.user && post.user.username) { %>
                                <h4 class="text-blue-400 font-semibold">@<%= post.user.username %></h4>
                            <% } else { %>
                                <h4 class="text-gray-500 font-semibold">@Unknown</h4>
                            <% } %>
                            <small class="text-gray-500"><%= post.likes.length %> Likes</small>
                        </div>
                        <p class="text-sm text-gray-300 mt-2"><%= post.content %></p>
                        <div class="flex justify-between items-center mt-3">
                            <a class="text-blue-400 hover:text-blue-500 transition font-medium" href="/like/<%= post._id %>">
                                <%= post.likes.includes(user._id) ? "Unlike" : "Like" %>
                            </a>
                            <% if (post.user && post.user._id && user && user._id && post.user._id.toString() === user._id.toString()) { %>
                                <a class="text-gray-500 hover:text-gray-400 transition font-medium" href="/edit/<%= post._id %>">Edit</a>
                            <% } %>
                        </div>
                    </div>
                <% }) %>

            </div>
        </div>
    </div>
</body>
</html>
